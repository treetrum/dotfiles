# use block cursor
shell-integration-features = no-cursor
cursor-style = block

# theme
theme = TokyoNight Moon
window-width = 120
window-height = 32
background-opacity = 0.95
background-blur = 20
adjust-cell-height = 5%

# typography
font-size = 13
font-thicken = true
font-thicken-strength = 100

# send alt-j and alt-k as plain
keybind = alt+j=esc:j
keybind = alt+k=esc:k

# send shift-enter as a newline
keybind = shift+enter=text:\n

# Make things work nicely with unraid
shell-integration-features = ssh-terminfo
shell-integration-features = ssh-env
